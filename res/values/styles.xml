<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!--  Overlay Screen -->
  	<style name="Theme.CustomDialog" parent="@android:style/Theme.Dialog">
  		<item name="android:windowNoTitle">true</item>
  		<item name="android:textAppearance">@style/P</item>
  	</style>
  	
  	<style name="OverlayActivity">
  	    <item name="android:background">#ff0a5587</item>
  	    <item name="android:textColor">#ffffffff</item>
  	</style>
  	
  	<!--  Main Menu -->
  	<style name="ButtonsMainMenu">
  	    <item name="android:layout_width">0dip</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">0.25</item>
		<item name="android:background">@drawable/menu_button_selector</item>
		<item name="android:textSize">14dip</item>
		<item name="android:textColor">#ff444444</item>
  	</style>
  	
  	<!--  Holders -->
  	<style name="ListView_standard_textholder">
  	    <item name="android:layout_width">0dip</item>
  	    <item name="android:layout_height">match_parent</item>
  	    <item name="android:layout_weight">0.7</item>
  	    <item name="android:gravity">bottom</item>
  	    <item name="android:orientation">vertical</item>
  	</style>
  	
  	<style name="ListView_augmented_textholder">
  	    <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dip</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">1.0</item>
        <item name="android:gravity">bottom</item>
  	</style>
  	
  	<style name="H1Holder">
  		<item name="android:background">#ff8fae22</item>   
  	</style>
  	
  	<style name="NavHolder">
  	    <item name="android:padding">0dip</item>
  	    <item name="android:background">@drawable/nav_back</item>
  	    <item name="android:gravity">left|center_vertical</item>
  	    <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
  	</style>
  	
  	<!--  Fonts -->
  	<style name="H1">
  	    <item name="android:paddingLeft">6dip</item>
  		<item name="android:paddingRight">6dip</item>
  	    <item name="android:textColor">#ffffffff</item>
  	    <item name="android:textSize">24dip</item>
  	</style>
  	
  	<style name="NavH1">
  	    <item name="android:paddingLeft">10dip</item>
  		<item name="android:paddingRight">6dip</item>
  	    <item name="android:textColor">#ff0a5587</item>
  	    <item name="android:textSize">24dip</item>
  	    <item name="android:layout_width">wrap_content</item>
  	    <item name="android:layout_height">wrap_content</item>
  	    <item name="android:gravity">right|center</item>
  	</style>
  	
  	<style name="H2">
  	    <item name="android:textColor">#ffffffff</item>
  	    <item name="android:textSize">18dip</item>
  	</style>
  	
  	<style name="H3">
  	    <item name="android:textColor">#ff8fae22</item>
  	    <item name="android:textSize">16dip</item>
  	    <item name="android:paddingLeft">6dip</item>
  	    <item name="android:paddingRight">6dip</item>
  	</style>
  	
  	<style name="P" parent="@android:style/TextAppearance">
  	    <item name="android:textColor">#ffffffff</item>
  	</style>
  	
  	<style name="ListView_standard_text">
  	    <item name="android:layout_width">match_parent</item>
  	    <item name="android:layout_height">wrap_content</item>
  	    <item name="android:gravity">bottom</item>
  	    <item name="android:padding">4dip</item>
  	    <item name="android:textSize">18dip</item>
  	</style>
  	
  	<style name="ListView_augmented_text">
  	    <item name="android:layout_width">0dip</item>
  	    <item name="android:layout_height">wrap_content</item>
  	    <item name="android:layout_weight">0.6</item>
  	    <item name="android:gravity">bottom</item>
  	    <item name="android:padding">4dip</item>
  	</style>
  	
  	<!--  Buttons -->
  	<style name="NavButton_standard">
  		<item name="android:background">#00ffffff</item>
  		<item name="android:padding">0dip</item>
  		<item name="android:layout_width">40dip</item>
  		<item name="android:layout_height">match_parent</item>
  		<item name="android:layout_margin">0dip</item>
  		<item name="android:layout_gravity">left</item>
  	</style>
  	
  	<style name="NewMediaButton">
  	    <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">80dip</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:background">#ffdbdfe3</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textColor">#ff0a5587</item>
        <item name="android:textSize">20dip</item>
  	</style>
  	
  	<style name="Button_lockbox">
  		<item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/nav_back_selector</item>
        <item name="android:drawableRight">@drawable/arrow_forward</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColor">#ff0a5587</item>
        <item name="android:textSize">24dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingTop">4dip</item>
        <item name="android:gravity">left|center</item>
  	</style>
  	
  	<style name="Button_standard">
  	    <item name="android:textSize">14dip</item>
  	    <item name="android:background">@drawable/standard_button_selector</item>
  	    <item name="android:paddingLeft">4dip</item>
  	    <item name="android:paddingRight">4dip</item>
  	    <item name="android:paddingTop">8dip</item>
  	    <item name="android:paddingBottom">8dip</item>
  	    <item name="android:textColor">#ff0a5587</item>
  	</style>
  	
  	<style name="ListView_standard_thumbnail">
  	    <item name="android:layout_width">0dip</item>
  	    <item name="android:layout_weight">0.3</item>
  	    <item name="android:layout_height">match_parent</item>
  	    <item name="android:background">#00ffffff</item>
  	</style>
  	
  	<style name="ListView_augmented_thumbnail">
  	    <item name="android:layout_width">0dip</item>
  	    <item name="android:layout_weight">0.3</item>
  	    <item name="android:layout_height">match_parent</item>
  	    <item name="android:background">#00ffffff</item>
  	</style>
  	
  	<style name="ListView_expandable_image">
  	    <item name="android:layout_width">0dip</item>
  	    <item name="android:layout_weight">0.1</item>
  	    <item name="android:layout_height">wrap_content</item>
  	    <item name="android:background">#00ffffff</item>
  	    <item name="android:padding">4dip</item>
  	</style>
  	
  	<!--  EditText -->
  	<style name="EditText_standard">
  	    <item name="android:background">@drawable/edit_text_background</item>
  	    <item name="android:textColor">#ffffffff</item>
  	    <item name="android:textColorHint">#aaffffff</item>
  	</style>
</resources>